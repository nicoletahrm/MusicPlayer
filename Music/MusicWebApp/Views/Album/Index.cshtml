@model IEnumerable<DomainModels.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArtistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordLabelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordLabelName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { album_id = item.AlbumId }, new { style="text-decoration: none;" } ) |
                @Html.ActionLink("Delete", "Delete", new { album_id = item.AlbumId }, new { style="text-decoration: none;" } ) |
                @Html.ActionLink("Add to playlist", "AddAlbumToPlaylist", new { album_id = item.AlbumId }, new { style="text-decoration: none;" } )
            </td>
        </tr>
}
    </tbody>
</table>

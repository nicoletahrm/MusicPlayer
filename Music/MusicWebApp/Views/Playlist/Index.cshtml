@model IEnumerable<DomainModels.Playlist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.ActionLink(item.Title, "PlaylistSongs", new { playlist_id = item.PlaylistId }, new { style="text-decoration: none;" } )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { playlist_id = item.PlaylistId }, new { style="text-decoration: none;" } ) |
                @Html.ActionLink("Delete", "Delete", new { playlist_id = item.PlaylistId }, new { style="text-decoration: none;" } )
            </td>
        </tr>
}
    </tbody>
</table>

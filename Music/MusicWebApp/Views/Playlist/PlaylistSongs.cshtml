@model IEnumerable<DomainModels.Song>

@{
    ViewData["Title"] = "Playlist songs";
}

<h1>Playlist songs</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td> 
                @Html.ActionLink("Like", "AddLike", new { song_id = item.SongId, playlist_id = @ViewBag.PlaylistId }, new { style="text-decoration: none;" } ) |
                @Html.ActionLink("Remove from playlist", "RemoveSongFromPlaylist", new { song_id = item.SongId, playlist_id = @ViewBag.PlaylistId }, new { style="text-decoration: none;" } )
            </td>
        </tr>
}
    </tbody>
</table>
